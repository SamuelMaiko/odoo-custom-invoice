<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!-- list view -->
    <record id="view_utility_meter_tree" model="ir.ui.view">
        <field name="name">utility.meter.list</field>
        <field name="model">utility.meter</field>
        <field name="arch" type="xml">
            <list string="Meters">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="status"/>
                <field name="active_from"/>
                <field name="active_to"/>
                <field name="current_reading"/>
                <field name="replacement_date"/>
            </list>
        </field>
    </record>

<!-- form view -->
    <record id="view_utility_meter_form_custom" model="ir.ui.view">
        <field name="name">utility.meter.form.custom</field>
        <field name="model">utility.meter</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_replace_meter"
                            type="object"
                            string="Replace Meter"
                            class="btn-primary"
                            invisible="status == 'replaced'"/>
                </header>
                <!-- paste the rest of your XML from Developer Mode here -->
                <sheet string="Utility Meter">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="product_id" can_create="True" can_write="True"/>
                            <field name="active_from"/>
                            <field name="initial_reading"/>
                            <field name="replaced_by_id" can_create="True" can_write="True"/>
                            <field name="current_reading"/>
                        </group>
                        <group>
                            <field name="customer_id" can_create="True" can_write="True"/>
                            <field name="status"/>
                            <field name="active_to"/>
                            <field name="final_reading"/>
                            <field name="replacement_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="reading_ids" on_change="1">
                            <list string="Meter Reading" delete="False">
                                <field name="reading_date" on_change="1"/>
                            </list>
                        </field>
                    </group>
                    <group/>
                    <group>
                        <separator/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
