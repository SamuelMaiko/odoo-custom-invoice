<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_replace_meter" model="ir.ui.view">
        <field name="name">account.move.form.inherit.replace.meter</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Insert button right after Payment Terms -->
            <xpath expr="//field[@name='delivery_date']" position="before">
                <button
                    name="action_replace_meter"
                    type="object"
                    string="Replace Meter"
                    class="btn-secondary ms-2"
                    invisible="state != 'draft' or move_type not in ('out_invoice', 'out_refund')"
                />
            </xpath>

        </field>
    </record>
</odoo>
