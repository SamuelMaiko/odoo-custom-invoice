<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Action for the Meter tree/form view -->
<record id="action_utility_meter_tree" model="ir.actions.act_window">
    <field name="name">Meters</field>
    <field name="res_model">utility.meter</field>
    <field name="view_mode">list,form</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Create a new utility meter.
        </p>
    </field>
</record>

<!-- Menu item under Receivables / Customers -->
<menuitem id="menu_utility_meters"
          name="Meters"
          parent="account.menu_finance_receivables"
          action="action_utility_meter_tree"
          groups="base.group_user"
          sequence="111"/>
            
</odoo>
