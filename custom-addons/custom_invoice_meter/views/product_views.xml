<odoo>
    <record id="product_form_inherit_meter" model="ir.ui.view">
        <field name="name">product.template.form.meter</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Insert is_metered_product after the 'type' field -->
            <xpath expr="//page[@name='general_information']/group/group[@name='group_general']/field[@name='type']" position="after">
                <field name="is_metered_product"/>
            </xpath>
        </field>
    </record>
</odoo>
